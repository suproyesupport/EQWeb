@using EqCrm.Models
@{
    ViewBag.Title = "MnttoClientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Panel del gridcontainer -->
<div id="panel-1" class="panel">
    <div class="panel-hdr">
        <h2>
            Mantenimiento de clientes<span class="fw-300"><i></i></span>
        </h2>
        <div class="panel-toolbar">
            <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse" style="display:none"></button>
        </div>
    </div>
    @*aqui*@
    <div id="panel_crud" class="panel-container show">
        <div class="panel-content">
            <button id="btnAgregar" style="margin-right:30px" class="btn btn-info">Agregar</button>
        </div>
        <div id="gridContainer"></div>
    </div>
</div>

<!--Panel de información-->
<div id="panel-2" class="panel">
    <div class="panel-hdr">
        <h2>Clientes<span class="fw-300"></span></h2>
        <div class="panel-toolbar">
            <button class="btn btn-panel waves-effect waves-themed" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse" style="display:none"></button>
        </div>
    </div>
    @*aqui*@
<div id="panel_datos" class="panel-container collapse">
    <div class="panel-content">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#tab_direction-1" role="tab">Datos generales</a></li>
            <!--<li class="nav-item"><a class="nav-link" data-toggle="tab" href="#tab_direction-5" role="tab">Cliente</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#tab_direction-2" role="tab">Aseguradora</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#tab_direction-3" role="tab">Vehículo</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#tab_direction-4" role="tab">Detalle Productos/Servicios</a></li>-->
        </ul>
        <div class="tab-content p-3">

            <!--TAB 1-->
            <div class="tab-pane fade show active" id="tab_direction-1" role="tabpanel">
                @*<div class="panel-hdr">
                        <div class="d-flex justify-content-between">
                            <h2>Datos de la Orden</h2>
                        </div>
                    </div>*@
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="form-group row">
                            <div class="col-lg-4">
                                <label>Código de cliente</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inp_codclie" name="inp_codclie" disabled="">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <label>Status</label>
                                <div class="input-group">
                                    <input id="inp_status" class="form-control" />
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <label>NIT / CUI</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inp_nit" name="inp_nit" onchange="BuscarNit();" placeholder="Número de identificación">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-6">
                                @*SON LOS VENDEDORES*@
                                <label>Razón social</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inp_nombre" name="inp_nombre" placeholder="Nombre">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label>Dirección</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inp_direccion" name="inp_direccion" placeholder="Ciudad">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Teléfono</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inp_telefono" name="inp_telefono" placeholder="0000-0000">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label>Email</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inp_email" name="inp_email" placeholder="equilibrium@example.com">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-6">
                                <label>Días de crédito</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="inp_diascre" name="inp_diascre" placeholder="0">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label>Límite de crédito</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="inp_limcre" name="inp_limcre" placeholder="0">
                                </div>
                            </div>
                        </div>








                        <div class="form-group row">
                            @*<div class="col-lg-2">
                                    <label>Atención</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="inp_atencion" name="inp_atencion">
                                    </div>
                                </div>*@
                            <div class="col-lg-6">
                                <label>Clasificación</label>
                                <div class="input-group">
                                    <input id="inp_clasificacion" class="form-control" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label>Ruta</label>
                                <div class="input-group">
                                    <input id="inp_ruta" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-10">
                            </div>
                            <div class="col-lg-1">
                                <div class="input-group">
                                    <button id="btnCreate" class="btn btn-info" style="display:none;">Agregar</button>
                                    <button id="btnUpdate" class="btn btn-info" style="display:none;">Modificar</button>
                                </div>
                            </div>
                            <div class="col-lg-1">
                                <div class="input-group">
                                    <button class="btn btn-info">Cancelar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <button id="btn_newSearch" class="btn btn-info">Nueva busqueda</button>
            </div>
        </div>

    </div>






    <!-- Modal center -->
    <div class="modal fade" id="modal-center" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">
                        Mensaje
                        <small class="m-0 text-muted">
                            @*Below is a static modal example*@
                        </small>
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fal fa-times"></i></span>
                    </button>
                </div>
                <div class="modal-body">
                    <label id="modal_mensaje"></label>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                </div>
            </div>
        </div>
    </div>






    @* INICIO MODAL GENERICO
    <div class="modal fade modal-backdrop-transparent" id="modal-generico" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Mensaje</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fal fa-times"></i></span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" id="Error">
                        <label id="mensaje"></label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="btn-generico" hidden></button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    FIN MODAL GENERICO *@
</div>
</div>

<script src="~/js/funciones_mntto_clientes.js"></script>
